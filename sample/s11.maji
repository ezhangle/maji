printf :: (fmt: char*, d: int) #foreign "/usr/lib/libc.dylib";
malloc :: (size: int) -> void* #foreign "/usr/lib/libc.dylib";

main :: () {
    a : vec3* = malloc(size_of(vec3));
    a.x = 1;
    a.y = 2;
    a.z = 3;
    printf("a.x = %d\n", a.x);
    printf("a.y = %d\n", a.y);
    printf("a.z = %d\n", a.z);

    xx := offset_of(vec3, z);
    printf("offset_of = %d\n", xx);

    xxx := size_of(vec3);
    printf("size_of = %d\n", xxx);
}

vec3 :: struct {
    x: int;
    y: int;
    z: int;
}
