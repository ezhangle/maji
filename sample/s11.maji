printf :: (fmt: char*, d: int) #foreign "/usr/lib/libc.dylib";
malloc :: (size: int) -> void* #foreign "/usr/lib/libc.dylib";

main :: () {
    a : vec3* = malloc(cast(int) sizeof(vec3));
    a.x = 1;
    a.y = 2;
    a.z = 3;
    printf("a.x = %d\n", a.x);
    printf("a.y = %d\n", a.y);
    printf("a.z = %d\n", a.z);
}

vec3 :: struct {
    x: int;
    y: int;
    z: int;
}
